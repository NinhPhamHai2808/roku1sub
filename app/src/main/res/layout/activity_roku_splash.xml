<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/id_img_background_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/roku_splash_1" />

    <ImageView
        android:id="@+id/id_img_icon"
        android:layout_width="256dp"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/roku_icon" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_tv_agree"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/id_check_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#2D96FF"
            android:text="I read all terms of use &amp; agree with the" />

        <TextView
            android:id="@+id/id_tv_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textColor="#2D96FF"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView

        android:id="@+id/id_tv_agree"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/roku_disable" />
</RelativeLayout>